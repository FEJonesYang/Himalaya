<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/shape_album_item_bg">

    <TextView
        android:id="@+id/item_order"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="77"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/contain_detail"
        android:layout_width="240dp"
        android:layout_height="66dp"
        android:layout_toRightOf="@id/item_order"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_detail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#000000"
            android:text="我是大标题"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/play_detail"
                android:text="17.4万" />

            <TextView
                android:id="@+id/detail_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@mipmap/clock"
                android:text="05:07" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="-16dp"
        android:layout_below="@id/contain_detail"
        android:id="@+id/tv_detail_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="30dp"
        android:text="2018-06-11"
        android:textSize="14sp" />

</RelativeLayout>